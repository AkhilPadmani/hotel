<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/ParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/Items_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardElevation="5dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="@dimen/dim_25"
                        android:layout_height="@dimen/dim_25"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dim_7"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/txtItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/View"
                        android:layout_toRightOf="@+id/btnBack"
                        android:fontFamily="@font/desyatiy_bold"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/View"
                        android:layout_width="@dimen/dim_30"
                        android:layout_height="@dimen/dim_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_back" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Items_Toolbar">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Items_Toolbar"
                android:layout_marginStart="@dimen/dim_15"
                android:layout_marginEnd="@dimen/dim_15"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginBottom="@dimen/dim_5"
                android:elevation="@dimen/dim_10"
                ads:cardCornerRadius="@dimen/dim_10">

                <androidx.cardview.widget.CardView
                    android:id="@+id/LayCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="@dimen/dim_10"
                    ads:cardCornerRadius="@dimen/dim_10">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_your_logo" />

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/LayItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LayCardImage"
                    android:layout_marginTop="@dimen/dim_5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/dim_7"
                        android:layout_marginTop="@dimen/dim_10"
                        android:layout_marginRight="@dimen/dim_7"
                        android:layout_marginBottom="@dimen/dim_10"
                        android:background="@drawable/button_background"
                        ads:cardBackgroundColor="@color/white"
                        ads:cardCornerRadius="@dimen/dim_5"
                        app:elevation="@dimen/dim_7">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/dim_20"
                            android:elevation="@dimen/dim_7"
                            ads:cardBackgroundColor="#FFFFFF"
                            ads:cardCornerRadius="@dimen/dim_5">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/CardItemName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    ads:cardBackgroundColor="@color/black"
                                    ads:cardCornerRadius="0dp"
                                    app:elevation="@dimen/dim_7">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="10dp"
                                        android:fontFamily="@font/akatamakata_bold"
                                        android:gravity="center"
                                        android:text="Item Name"
                                        android:textColor="@color/white" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/CardItemName"
                                    android:layout_centerHorizontal="true"
                                    ads:cardBackgroundColor="@color/white"
                                    ads:cardCornerRadius="0dp"
                                    app:elevation="2dp">

                                    <TextView
                                        android:id="@+id/txtFoodName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="10dp"
                                        android:fontFamily="@font/akatamakata_bold"
                                        android:gravity="center"
                                        android:text="Food Name" />

                                </androidx.cardview.widget.CardView>


                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LayItemName"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/dim_5"
                    android:elevation="@dimen/dim_7"
                    ads:cardBackgroundColor="#FFFFFF"
                    ads:cardCornerRadius="@dimen/dim_10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dim_10">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/CardFullPrice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/dim_10"
                            android:background="@drawable/button_background"
                            ads:cardBackgroundColor="@color/white"
                            ads:cardCornerRadius="@dimen/dim_5"
                            app:elevation="@dimen/dim_7">

                            <TextView
                                android:id="@+id/txtFoodFullPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/dim_7"
                                android:fontFamily="@font/lt_bold"
                                android:gravity="center"
                                android:text="₹ 0"
                                android:textColor="@color/black" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/CardHalfPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/CardFullPrice"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/dim_10"
                            ads:cardBackgroundColor="@color/white"
                            ads:cardCornerRadius="@dimen/dim_5"
                            app:elevation="@dimen/dim_7">

                            <TextView
                                android:id="@+id/txtFoodHalfPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/dim_7"
                                android:fontFamily="@font/lt_bold"
                                android:gravity="center"
                                android:text="₹ 0"
                                android:textColor="@color/black" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/CardRadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/CardHalfPrice"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/dim_10"
                            ads:cardBackgroundColor="@color/white"
                            ads:cardCornerRadius="@dimen/dim_5"
                            app:elevation="@dimen/dim_7">


                            <RadioGroup
                                android:id="@+id/radioGroupPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txtFoodHalfPrice"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radioFullPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dim_10"
                                    android:checked="true"
                                    android:gravity="start|center"
                                    android:text="Full"
                                    android:textColor="@color/black" />

                                <RadioButton
                                    android:id="@+id/radioHalfPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dim_10"
                                    android:gravity="start|center"
                                    android:text="Half"
                                    android:textColor="@color/black" />
                            </RadioGroup>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/CardRadioButton"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/CardQty"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dim_10"
                                android:elevation="@dimen/dim_7"
                                ads:cardBackgroundColor="@color/white"
                                ads:cardCornerRadius="@dimen/dim_5">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/btnDecrease"
                                        android:layout_width="@dimen/dim_45"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:adjustViewBounds="true"
                                        android:background="@color/black"
                                        android:padding="@dimen/dim_15"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_minus"
                                        android:textColor="@color/white"
                                        ads:backgroundTintMode="add"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/txtQuantity"
                                        android:layout_width="@dimen/dim_45"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_centerHorizontal="true"
                                        android:text="1"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12sp" />

                                    <ImageView
                                        android:id="@+id/btnIncrease"
                                        android:layout_width="@dimen/dim_45"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:adjustViewBounds="true"
                                        android:background="@color/black"
                                        android:padding="@dimen/dim_15"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_plus"
                                        android:textColor="@color/white"
                                        app:tint="@color/white" />
                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dim_10"
                                android:layout_marginRight="@dimen/dim_12"
                                android:visibility="visible">


                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/Cardamount"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    ads:cardBackgroundColor="@color/white"
                                    ads:cardCornerRadius="5dp"
                                    ads:elevation="@dimen/dim_7">

                                    <TextView
                                        android:id="@+id/txtTotalAmount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/dim_7"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/lt_bold"
                                        android:gravity="center"
                                        android:text="₹ 0"
                                        android:textColor="@color/black" />

                                </com.google.android.material.card.MaterialCardView>


                            </RelativeLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CardChild"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:layout_marginTop="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_20"
                    android:layout_marginBottom="@dimen/dim_20">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_view_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true">

                        <Button
                            android:id="@+id/BtnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Cardamount"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Add To Cart" />


                    </com.facebook.shimmer.ShimmerFrameLayout>
                </RelativeLayout>


            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" /> <!-- Initially hidden -->
    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/KonfettiView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>